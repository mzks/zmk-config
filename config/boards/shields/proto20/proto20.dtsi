#include <dt-bindings/zmk/matrix_transform.h>

/ {

    chosen {
        zmk,kscan = &kscan0;
        zmk,matrix_transform = &default_transform;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix_transform";
        columns = <8>;
        rows = <5>;
        map = <
        RC(0,0) RC(1,0) RC(2,0) RC(3,0) RC(4,0) RC(5,0) RC(6,0) RC(7,0)
        RC(0,1) RC(1,1) RC(2,1) RC(3,1) RC(4,1) RC(5,1) RC(6,1) RC(7,1)
        RC(0,2) RC(1,2) RC(2,2) RC(3,2) RC(4,2) RC(5,2) RC(6,2) RC(7,2)
        RC(0,3) RC(1,3) RC(2,3) RC(3,3) RC(4,3) RC(5,3) RC(6,3) RC(7,3)
        RC(0,4) RC(1,4) RC(2,4) RC(3,4) RC(4,4) RC(5,4) RC(6,4) RC(7,4)
        >;
    };

kscan0: kscan_0 {
            compatible = "zmk,kscan-gpio-matrix";
            label = "KSCAN";
            diode-direction = "row2col";
            row-gpios
                = <&xiao_d 2 GPIO_ACTIVE_HIGH>
                , <&xiao_d 3 GPIO_ACTIVE_HIGH>
                , <&xiao_d 4 GPIO_ACTIVE_HIGH>
                , <&xiao_d 5 GPIO_ACTIVE_HIGH>
                , <&xiao_d 6 GPIO_ACTIVE_HIGH>
                ;
        };

left_encoder: encoder_left {
                  compatible = "alps,ec11";
                  label = "LEFT_ENCODER";
                  a-gpios = <&xiao_d 1 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
                  b-gpios = <&xiao_d 0 (GPIO_ACTIVE_HIGH | GPIO_PULL_UP)>;
                  resolution = <4>;
                  status = "disabled";
              };

              sensors {
                  compatible = "zmk,keymap-sensors";
                  sensors = <&left_encoder>;
              };
